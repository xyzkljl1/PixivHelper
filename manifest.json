{
  // 清单文件的版本，这个必须写，而且必须是2
  "manifest_version": 2,
  // 插件的名称
  "name": "demo",
  // 插件的版本
  "version": "1.0.0",
  // 插件描述
  "description": "PixivHelper",
  // 会一直常驻的后台JS或后台页面
  "background": {
    "page": "background.html"
  },
  "icons": {
    "16": "icon/pixiv.png",
    "48": "icon/pixiv.png",
    "128": "icon/pixiv.png"
  },
  // 权限申请
  "permissions": [
    "cookies",
    "tabs", // 标签
    "webRequest", // web请求
    "webRequestBlocking", // 阻塞式web请求
    "storage", // 插件本地存储
    "http://*/*", // 可以通过executeScript或者insertCSS访问的网站
    "https://*/*" // 可以通过executeScript或者insertCSS访问的网站
  ]
}